{
  "name": "Dashboard Kiosk",
  "version": "1.1",
  "manifest_version": 2,
  "permissions": [
    "webview",
    "power",
    "pointerLock",
    "fullscreen",
    "alarms"
  ],
  "app": {
    "background": {
      "scripts": [
        "main.js"
      ],
      "persistent": false
    }
  },
  "kiosk_enabled": true,
  "icons": {
    "128": "icons/128.png"
  }
}
