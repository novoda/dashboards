{
  "name": "Dashboard Kiosk",
  "version": "1",
  "manifest_version": 2,
  "minimum_chrome_version": "49.0.0.0",
  "permissions": [
    "webview",
    "power",
    "pointerLock",
    "fullscreen",
    "alarms"
  ],
  "app": {
    "background": {
      "scripts": [
        "main.js"
      ]
    }
  },
  "kiosk_enabled": true,
  "default_locale": "en",
  "icons": {
    "128": "icons/128.png"
  }
}
