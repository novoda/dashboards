{
  "name": "Dashboard Kiosk",
  "short_name": "Dashboard Kiosk",
  "description": "Dashboard app launcher",
  "author": "Novoda",
  "manifest_version": 2,
  "version": "1.1.1",
  "permissions": [
    "webview",
    "power",
    "pointerLock",
    "fullscreen",
    "alarms"
  ],
  "app": {
    "background": {
      "scripts": [
        "main.js"
      ],
      "persistent": false
    }
  },
  "kiosk_enabled": true,
  "icons": {
    "128": "icons/128.png"
  },
  "update_url": "https://clients2.google.com/service/update2/crx"
}
